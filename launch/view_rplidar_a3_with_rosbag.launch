<launch>
  <!-- Argument for bag file name with default value -->
  <arg name="bag_file_name" default="$(find lidar_slam)/bags/test.bag"/>

  <!-- Launch the RPLIDAR node -->
  <include file="$(find rplidar_ros)/launch/view_rplidar_a3.launch" />

  <!-- Start recording with rosbag -->
  <node pkg="rosbag" type="record" name="rosbag_record" args="-O $(arg bag_file_name) -a" output="screen" />
</launch>
